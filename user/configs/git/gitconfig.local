[credential]
    helper = store

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only --features=interactive

[delta]
    features = decorations
    side-by-side = true
    navigate = true
    light = false

[delta "interactive"]
    keep-plus-minus-markers = false

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
